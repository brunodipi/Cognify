<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cognify.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registroFragment"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registroFragment"
        android:name="com.example.cognify.RegistroFragment"
        android:label="fragment_registro2"
        tools:layout="@layout/fragment_registro2" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cognify.HomeFragment"
        android:label="fragment_home3"
        tools:layout="@layout/fragment_home3" >
        <action
            android:id="@+id/action_homeFragment_to_paciente1Fragment"
            app:destination="@id/paciente1Fragment" />
        <action
            android:id="@+id/action_homeFragment_to_facuFragment"
            app:destination="@id/facuFragment" />
    </fragment>
    <fragment
        android:id="@+id/paciente1Fragment"
        android:name="com.example.cognify.paciente1Fragment"
        android:label="fragment_paciente1"
        tools:layout="@layout/fragment_paciente1" />
    <fragment
        android:id="@+id/facuFragment"
        android:name="com.example.cognify.facuFragment"
        android:label="fragment_facu"
        tools:layout="@layout/fragment_facu" />
</navigation>