<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#254E70"
    tools:context=".RegistroFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registre su usuario"
        android:textSize="30sp"
        android:textColor="#1EFFBB"
        android:layout_marginBottom="80dp"
        android:textStyle="bold"
        android:gravity="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:backgroundTint="#1EFFBB"
        app:boxStrokeColor="#1EFFBB"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:hintTextColor="#1EFFBB"
        android:textCursorDrawable="@color/colorCursor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailNuevoEditText"
            android:layout_width="match_parent"
            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:drawableTint="#FAFAFA"

            android:foregroundTint="#FFFFFF"
            android:hint="Ingrese su email"
            android:textColorHint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:backgroundTint="#1EFFBB"
        android:textColorHint="@color/white"
        app:boxStrokeColor="#1EFFBB"
        app:hintTextColor="#1EFFBB"
        android:textCursorDrawable="@color/colorCursor"
        app:passwordToggleEnabled="true" >

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/passNuevoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su contraseña"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginBottom="40dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:backgroundTint="#1EFFBB"
        app:boxStrokeColor="#1EFFBB"
        app:hintTextColor="#1EFFBB"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@color/colorCursor"

        app:passwordToggleEnabled="true" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passConfirmEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirme su contraseña"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginBottom="60dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/boton_registrar"
        android:text="@string/registrar"
        android:backgroundTint="#F7C59F"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>